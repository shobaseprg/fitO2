%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "name", maxlength: "20"
  .field
    = f.label :slack
    %br/
    = f.text_field :slack, autofocus: true, autocomplete: "slack",maxlength: "20"
  .field
    = f.label :period
    %br/
    = f.text_field :period, autofocus: true, autocomplete: "period",maxlength: "3"
  .field
    = f.label :style
    %br/
    = f.select :style, [["--", 0],["短期", 1],["夜間", 2]]
  .field
    = f.label :team
    %br/
    = f.text_field :team, autofocus: true, autocomplete: "team"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/ 
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
