  .lists.none{data: {target: "1"}}
    - i = 1
    - n = 101
    - @bases.each do |base|
      - total = 0
      .lesson_lists{id: "lesson#{n}"}
        .lesson_no
          = "lesson #{i}"
        - base.each do |lesson|
          .lesson_lists__one
            .lesson_lists__one__title
              = link_to"#{lesson.title}",inputs_lesson_path(lesson.id)
            .lesson_lists__one__number
              = "投稿数：#{lesson.posts.where(input_or_output:0).length}"
              - total += lesson.posts.where(input_or_output:0).length
        .lesson_lists__one
          .lesson_lists__one__title
            = link_to"全て見る(lesson:#{i})",all_inputs_of_base_lesson_path(i)
