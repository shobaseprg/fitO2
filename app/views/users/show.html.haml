.mypage
  .mypage__inner
    .mypage__inner__header
      .mypage__inner__header__topic-id
        fitO_id:
        .mypage__inner__header__topic-id__value
          = "#{current_user.id}"
      .mypage__inner__header__topic
        name:
        .mypage__inner__header__topic__value
          = "#{current_user.name}"
      .mypage__inner__header__topic
        slack:
        .mypage__inner__header__topic__value
          = "#{current_user.slack}"
    .mypage__inner__output-times
      %p
        Output times  : 
      .mypage__inner__output-times__value
        = "#{current_user.output_times}"
    .mypage__inner__tabs
      .mypage__inner__tabs__tab{data: {target: "1"}}
        質問一覧
      .mypage__inner__tabs__tab{data: {target: "2"}}
        教えます一覧
      .mypage__inner__tabs__tab{data: {target: "3"}}
        アウトプット済

.post_all
  .post_all_inner.none{data: {target: "1"}}
    - @my_input_posts.each do |post|
      .one_post
        = link_to "",myshow_post_path(post.id)
        .one_post__title
          - case post.lesson.base_or_development
            - when 0 then
              = "基礎"
            - when 1 then
              = "応用"
            - when 2 then
              = "最終"
          = "lesson:#{post.lesson.lesson_no}"
          = post.lesson.title
        .one_post__title
          = post.title
          = "[id:#{post.id}]"
        .one_post__content
          = toc(post.content) 
          = markdown(post.content)

